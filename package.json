{
  "name": "reproject-tree-generator",
  "displayName": "ReProject Tree Generator",
  "description": "Простое расширение для Visual Studio Code, которое позволяет получить текстовое представление структуры вашего проекта.",
  "version": "1.0.0",
  "publisher": "ReNothingg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reproject.generateFile",
        "title": "Создать файл структуры"
      },
      {
        "command": "reproject.copyClipboard",
        "title": "Скопировать структуру"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "reproject.generateFile",
          "group": "navigation",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'"
        },
        {
          "command": "reproject.copyClipboard",
          "group": "navigation",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'"
        }
      ]
    },
    "configuration": {
      "title": "ReProject Tree Generator",
      "properties": {
        "reproject.ignorePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            ".DS_Store",
            "dist",
            "out",
            ".vscode",
            "__pycache__"
          ],
          "description": "Список папок и файлов, которые нужно исключить из дерева."
        },
        "reproject.outputFileName": {
          "type": "string",
          "default": "structure.txt",
          "description": "Имя файла, в который будет сохранена структура."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}